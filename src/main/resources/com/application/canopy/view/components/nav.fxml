<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<!-- Component: Navigation Sidebar -->
<VBox fx:id="navBar"
      xmlns:fx="http://javafx.com/fxml"
      spacing="16"
      alignment="TOP_CENTER"
      styleClass="sidebar"
      prefWidth="180">

    <!-- Definizione ToggleGroup per selezione esclusiva -->
    <fx:define>
        <ToggleGroup fx:id="pagesGroup"/>
    </fx:define>

    <!-- Sezione profilo / punti -->
    <VBox alignment="CENTER" spacing="8" styleClass="profile-section">
        <Label text="Canopy" styleClass="app-title" />
        <Label fx:id="userPoints" text="300" styleClass="points-label" />
    </VBox>

    <Separator prefWidth="150"/>

    <!-- Menu -->
    <VBox spacing="8" alignment="TOP_LEFT" styleClass="menu-section" fillWidth="true">

        <!-- Home -->
        <ToggleButton fx:id="btnHome"
                      text="Home"
                      toggleGroup="$pagesGroup"
                      contentDisplay="LEFT"
                      graphicTextGap="10"
                      maxWidth="Infinity"
                      styleClass="nav-button"
                      accessibleText="Vai alla Home">
            <!-- Placeholder icona (aggiungerai l'immagine in seguito) -->
            <!--
            <graphic>
                <ImageView fitWidth="18" fitHeight="18" preserveRatio="true"
                           image="@/assets/icons/home.png"/>
            </graphic>
            -->
        </ToggleButton>

        <!-- Achievements -->
        <ToggleButton fx:id="btnAchievements"
                      text="Achievements"
                      toggleGroup="$pagesGroup"
                      contentDisplay="LEFT"
                      graphicTextGap="10"
                      maxWidth="Infinity"
                      styleClass="nav-button"
                      accessibleText="Apri la pagina degli achievements">
            <!--
            <graphic>
                <ImageView fitWidth="18" fitHeight="18" preserveRatio="true"
                           image="@/assets/icons/trophy.png"/>
            </graphic>
            -->
        </ToggleButton>

        <!-- Erbario -->
        <ToggleButton fx:id="btnErbario"
                      text="Erbario"
                      toggleGroup="$pagesGroup"
                      contentDisplay="LEFT"
                      graphicTextGap="10"
                      maxWidth="Infinity"
                      styleClass="nav-button"
                      accessibleText="Apri l'erbario">
            <!--
            <graphic>
                <ImageView fitWidth="18" fitHeight="18" preserveRatio="true"
                           image="@/assets/icons/leaf.png"/>
            </graphic>
            -->
        </ToggleButton>

        <!-- Calendario -->
        <ToggleButton fx:id="btnCalendario"
                      text="Calendario"
                      toggleGroup="$pagesGroup"
                      contentDisplay="LEFT"
                      graphicTextGap="10"
                      maxWidth="Infinity"
                      styleClass="nav-button"
                      accessibleText="Apri il calendario">
            <!--
            <graphic>
                <ImageView fitWidth="18" fitHeight="18" preserveRatio="true"
                           image="@/assets/icons/calendar.png"/>
            </graphic>
            -->
        </ToggleButton>

    </VBox>

    <!-- Footer: logout -->
    <VBox alignment="BOTTOM_CENTER" spacing="8" styleClass="logout-section" VBox.vgrow="ALWAYS">
        <Separator prefWidth="150"/>
        <Button fx:id="btnLogout"
                text="Logout"
                contentDisplay="LEFT"
                graphicTextGap="10"
                maxWidth="Infinity"
                styleClass="logout-button"
                accessibleText="Esegui il logout">
            <!--
            <graphic>
                <ImageView fitWidth="18" fitHeight="18" preserveRatio="true"
                           image="@/assets/icons/logout.png"/>
            </graphic>
            -->
        </Button>
    </VBox>
</VBox>
